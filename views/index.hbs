<h1>{{title}}</h1>

<script>
    function sendForm(){
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/");
        xhr.onload = function(event){
            alert("Vote submitted"); // raw response
        };
        xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
        // or onerror, onabort
        var username = "SpringRacksTest";
        var host = document.getElementById('host').value;
        var port = document.getElementById('port').value;
        var publicKey = document.getElementById('publicKey').value;

        var formData = {
            username: username,
            host: host,
            port: port,
            publicKey: publicKey
        };

        xhr.send(JSON.stringify(formData));
    }
</script>

<form action="javascript:sendForm()" id="voteform">
    Host:<br>
    <input type="text" id="host" value="play.springracks.com">
    <br><br>
    Port:<br>
    <input type="text" id="port" value="2963">
    <br><br>
    Public Key:<br>
    <input type="text" id="publicKey" value="publickey">
    <br><br>
    <input type="submit" value="Submit Vote">
</form>
